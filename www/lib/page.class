class Page
{
	var $NAME, $TITLE, $URL;
	
	function Page($name = 'index', $title = '')
	{
		$this->NAME = $name;
		$this->TITLE = $title;
		$this->URL = 'http://' . $_SERVER['HTTP_HOST'] . $_SERVER['REQUEST_URI'];
		
		return TRUE;
	}
}