<?php	//define	define ("TITLE", "РА Портал");	define ("SITE_URL", 'http://' . $_SERVER['HTTP_HOST']);	define ("PAGE_URL", SITE_URL . $_SERVER['REQUEST_URI']);	define ("SITE_PATH", $_SERVER["DOCUMENT_ROOT"]);		if ( !isset($_SESSION) ) session_start();		//functions	function assign($string)	{		$result = '';		if ( isset($_GET[$string]) ) $result = $_GET[$string];		if ( isset($_POST[$string]) ) $result = $_POST[$string];			if ( isset($_SESSION[$string]) ) $result = $_SESSION[$string];					return $result;	}			function assign_file($string)	{		$result = array('title'=>'','text'=>'');		if ( isset($_FILES[$string]['tmp_name']) && $_FILES[$string]['tmp_name'] != '' && $_FILES['image']['error'] < 1 )		{			$result['title'] = $_FILES[$string]['name'];			$result['text'] = file_get_contents($_FILES[$string]['tmp_name']);            unlink($_FILES[$string]['tmp_name']);		}				return $result;	}?>